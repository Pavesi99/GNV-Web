@{
    ViewData["Title"] = "Entrar";
}

<div class="container h-100">
    <div class="row align-items-center h-100">
        <div class="col-6 mx-auto">
            <div class="card">
                <div class="card-header">
                    Login
                </div>
                <div class="card-body">
                    <form method="post" action="/home">
                        <div class="form-group">
                            <label for="usuario">Usuario</label>
                            <input id="usuario" class="form-control" placeholder="Digite seu usuario" type="text" name="">
                        </div>
                        <div class="form-group">
                            <label for="senha">Senha</label>
                            <input id="senha" class="form-control" placeholder="Digite sua senha" type="text" name="">
                        </div>
                        <button class="btn btn-primary float-right" type="submit">Entrar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@model GNV_Web.Models.Bairro

@{
    ViewData["Title"] = "Create";
    List<Cidade> cidades = new List<Cidade>();
    cidades.Add(new Cidade(1, "Brusque"));
}

<h1>Create</h1>

<h4>Bairro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_Cidade" class="control-label">Cidade</label>
                <select asp-for="Id_Cidade.Nome" class="form-control">
                    @foreach(Cidade cidade in cidades) 
                    {
                        cidades.Add(new Cidade(cidade.Id, cidade.Nome));
                    }
                </select>
                <span asp-validation-for="Id_Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
